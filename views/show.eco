<!DOCTYPE html>
<html>
  <head>
    <title>Viddit</title>
    <link rel="stylesheet" href="stylesheets/video.css" />
  </head>
  <body>
    <form action="/" method="post" id="new_video">
      <input type="text" name="url" placeholder="Enter an url&hellip;" autofocus />
      <input type="submit" value="Submit" />
    </form>

    <section id="videos">
      <article>
        <%- @video.html %>
      </article>
    </section>

  <script type="text/javascript" src="javascripts/jquery-1.10.2.min.js"></script>
  <script type="text/javascript" src="javascripts/jquery.fitvids.js"></script>
  <script type="text/javascript">
    $('#videos').fitVids();
  </script>
  </body>
</html>
