<!DOCTYPE html>
<html>
  <head>
    <title>Viddit</title>
    <link rel="stylesheet" href="/stylesheets/video.css" />
  </head>
  <body>
    <header>
      <h1><a href="/">Home</a></h1>
      <% if @current_user: %>
        <div class="user">
          <form action="/" method="post" id="new_video">
            <input type="text" name="url" placeholder="Enter an url&hellip;" autofocus />
            <input type="submit" value="Submit" />
          </form>
          <a href="/logout">logout</a>
        </div>
      <% else: %>
        <p class="user"><a href="/login">login</a> / <a href="/register">register</a></p>
      <% end %>
    </header>

    <section id="videos">
      <% for video in @videos: %>
        <article>
          <a href="/<%= video.id %>">
            <img src="<%= video.thumbnail_url %>" alt="<%= video.title %>"/>
            <h2><span><%= video.title %></span></h2>
          </a>
        </article>
      <% end %>
    </section>

  <script type="text/javascript" src="/javascripts/jquery-1.10.2.min.js"></script>
  <script type="text/javascript" src="/javascripts/jquery.fitvids.js"></script>
  <script type="text/javascript">
    $('#videos a').hover(function() {
      $(this).find('h2').toggle();
    });
  </script>
  </body>
</html>
