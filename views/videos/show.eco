<!DOCTYPE html>
<html>
  <head>
    <title><%= @video.title %> Â· <%= @video.author_name %></title>
    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <header>
      <h1><a href="/">Home</a></h1>
      <p class="user">
          <a href="#" class="selected"><%= @video.title.toLowerCase() %></a>&emsp;
        <% if @current_user: %>
          <a href="/">all videos</a>&emsp;
          <a href="/new">submit a video</a>&emsp;
          <a href="/logout">logout</a>
        <% else: %>
          <a href="/">all videos</a>&emsp;
          <a href="/register">register</a>&emsp;
          <a href="/login">login</a>
        <% end %>
      </p>
    </header>

    <section id="videos">
      <article>
        <%- @video.html %>
      </article>
    </section>

  <script type="text/javascript" src="/javascripts/jquery-1.10.2.min.js"></script>
  <script type="text/javascript" src="/javascripts/jquery.fitvids.js"></script>
  <script type="text/javascript">
    $('#videos').fitVids();
  </script>
  </body>
</html>
