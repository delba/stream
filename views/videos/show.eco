<!DOCTYPE html>
<html>
  <head>
    <title>Viddit</title>
    <link rel="stylesheet" href="/stylesheets/video.css" />
  </head>
  <body>
    <header>
      <h1><a href="/">Home</a></h1>
      <% if @current_user: %>
        <div class="user">
          <form action="/" method="post" id="new_video">
            <input type="text" name="url" placeholder="Enter an url&hellip;" autofocus />
            <input type="submit" value="Submit" />
          </form>
          <a href="#">logout</a>
        </div>
      <% else: %>
        <p class="user"><a href="#">login</a> / <a href="/register">register</a></p>
      <% end %>
    </header>

    <section id="videos">
      <article>
        <%- @video.html %>
      </article>
    </section>

  <script type="text/javascript" src="/javascripts/jquery-1.10.2.min.js"></script>
  <script type="text/javascript" src="/javascripts/jquery.fitvids.js"></script>
  <script type="text/javascript">
    $('#videos').fitVids();
  </script>
  </body>
</html>
